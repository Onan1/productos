@model OP.SysProductos.EN.Producto

<h2>¿Estás seguro de que deseas eliminar este producto?</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio</dd>

        <dt class="col-sm-2">Cantidad Disponible</dt>
        <dd class="col-sm-10">@Model.CantidadDisponible</dd>

        <dt class="col-sm-2">Fecha Creación</dt>
        <dd class="col-sm-10">@Model.FechaCreacion.ToString("yyyy-MM-dd HH:mm:ss")</dd>
    </dl>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
    </form>
</div>
